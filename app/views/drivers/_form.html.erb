<section class="driver-form form">
  <%= form_for @driver, html: { class: "driver-form" } do |f| %>
    <div class="driver-form-name">
        <%= f.label :name, "Driver Name:  " %>
        <%= f.text_field :name %>
    </div>
    <div class="driver-form-vin">
      <%= f.label :vin, "Vin Number" %>
      <%= f.text_field :vin %>
    </div>
    <div class="driver-form-make">
      <%= f.label :car_make, "Car Make" %>
      <%= f.select(:car_make) do %>
        <% (Driver.all.collect { |m| m.car_make}).uniq.each do |make| %>
          <%= content_tag(:option, make, value: make, selected: make == @driver.car_make) %>
        <% end %>
      <% end %>
    </div>
    <div class="driver-form-model">      
      <%= f.label :car_model, "Car Model" %>
      <%= f.select(:car_model) do %>
        <% (Driver.all.collect { |m| m.car_model}).uniq.each do |model| %>
          <%= content_tag(:option, model, value: model, selected: model == @driver.car_model) %>
        <% end %>
      <% end %>
    </div>
    <div class="driver-form-submit">
      <%= f.submit action_name %>
    </div>
<% end %>
</section>
