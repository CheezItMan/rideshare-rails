<section class="passenger-form form">
  <%= form_for @passenger, html: { class: "passenger-form" } do |f| %>
    <div class="passenger-form-name">
      <%= f.label :name, "Passenger Name:  " %>
      <%= f.text_field :name, class: "passenger-form-name-text-field" %>
    </div>
    <div class="passenger-form-phone">
      <%= f.label :phone_number, "Phone Number" %>
      <%= f.text_field :phone_number, class: "passenger-form-phone-text-field" %>
    </div>
    <div class="passenger-form-submit">    
      <%= f.submit action_name %>
  </div>
<% end %>
</section>
